@page "/BMI"
<h3>BMI</h3>

<hr />
<div>
    <div class="row">
        <div class="col-md-4">
            <input placeholder="Enter Weight" @bind="@weight" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <input placeholder="Enter Hight" @bind="@hight" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Result</p>
        </div>
        <div class="col-md-4">
            <input readonly @bind="@finalresult" />
        </div>
    </div>


    <br />
    <div class="row">
        <div class="col-md-2">
            <button @onclick="bmi" class="btn btn-light">Calculate</button>
        </div>
    </div>
</div>

@code {
        string weight;
        string hight;
        string finalresult;
        void bmi()
        {
            double heightNr = Convert.ToDouble(hight);
            finalresult = (Convert.ToDouble(weight) / (heightNr*heightNr)).ToString();
    }
   
}